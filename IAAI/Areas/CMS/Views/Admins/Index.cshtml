@model IEnumerable<IAAI.Models.Admin>

@{
    Layout = "~/Areas/CMS/Views/Shared/Back_Layout.cshtml";
    var formsIdentity = HttpContext.Current.User.Identity as FormsIdentity;
    string[] user = formsIdentity.Ticket.UserData.Split(';');
    string[] permission = user[3].Split(',');
}

@if (permission.Contains("E01-1"))
{
    <div style="margin:15px 0px">
        <a href='/CMS/Admins/Create' class="btn btn-primary btn-sm">新增用戶</a>
    </div>
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Account)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProfilePicture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InitDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Permission)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Account)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfilePicture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InitDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Permission)
            </td>


            <td>
                <div style="display: flex; justify-content: space-around; flex-wrap:wrap">
                    @if (permission.Contains("E01-2"))
                    {
                        using (Html.BeginForm("Edit", "Admins", new { id = item.AdminId }, FormMethod.Get))
                        {
                            <button type="submit" class="btn btn-outline-primary btn-sm">編輯</button>
                        }
                    }

                    @if (permission.Contains("E01-3"))
                    {
                        using (Html.BeginForm("Delete", "Admins", new { id = item.AdminId }, FormMethod.Post, new { onsubmit = "return confirm('您確定要刪除用戶嗎？');" }))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger btn-sm">刪除</button>
                        }
                    }
                </div>
            </td>
        </tr>
    }

</table>
