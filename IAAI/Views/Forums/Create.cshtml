@model IAAI.Models.Forums

@{
    ViewBag.Title = "討論區";
    Layout = "~/Views/Shared/Front_Layout.cshtml";
    ViewBag.Row = "<li>會員專區</li><li><a href='#'>新增文章</a></li>";
}


            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                <div class="sidebar sidebar-right">
                    <div class="widget">
                        <h2 class="widget-title"><i class="fa fa-folder-open-o">&nbsp;</i>會員專區</h2>
                        <ul class="arrow nav nav-tabs nav-stacked">
                            <li><a href="~/Forums/Index">討論區</a></li>
                            <li><a href="">修改個人資料</a></li>
                            <li><a href="~/ForumMembers/Logout">登出</a></li>
                        </ul>
                    </div>
                    <!-- Categories end -->
                </div>
                <!-- Sidebar end -->
            </div>

            <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
                <h2 class="page-title">新增文章</h2>
                <hr class="botmargin-min">
                <!--Creat Start-->
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.ForumMemberId)
                    @Html.HiddenFor(model => model.InitDate)

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="col-sm-2 control-label">標　題：</label>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-sm-2">
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                <p class="text-danger">@Html.Raw(ViewBag.Tip)</p>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.TextAreaFor(model => model.ContentHtml, new { htmlAttributes = new { @class = "ckeditor" } })
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button class="btn btn-primary solid blank" type="submit">發 表</button>
                            </div>
                        </div>
                    </div>
                }

            </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")" type="text/javascript"></script>
    @*加入圖片上傳頁籤，放在頁面底下，放在頁面head區的話，會抓不到myText DOM*@
    <script type="text/javascript">
        CKEDITOR.replace('ContentHtml', { filebrowserImageUploadUrl: '/Upload/ForumPicture' });
    </script>
}
